<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@string/pref_default_server_address"
        android:inputType="textUri"
        android:key="ip_address"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_server_address"/>
    <EditTextPreference
        android:defaultValue="@integer/pref_default_age"
        android:inputType="number"
        android:key="user_age"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_age"/>
    <EditTextPreference
        android:defaultValue="@integer/pref_default_height"
        android:inputType="number"
        android:key="user_height"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_height"/>
    <EditTextPreference
        android:id="@+id/user_weight"
        android:defaultValue="@integer/pref_default_weight"
        android:inputType="number"
        android:key="user_weight"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_weight"/>
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_diabetes_type_titles"
        android:entryValues="@array/pref_diabetes_type_values"
        android:key="diabetes_type"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_diabetes_type_title"/>
    <EditTextPreference
        android:defaultValue="1.0"
        android:inputType="numberDecimal"
        android:key="user_range_start"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_range_start_title"/>
    <EditTextPreference
        android:defaultValue="1.0"
        android:inputType="numberDecimal"
        android:key="user_range_end"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_range_end_title"/>
    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->

</PreferenceScreen>